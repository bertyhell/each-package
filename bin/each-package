#!/usr/bin/env node

var program = require('commander');

function parseInteger(value) {
  return ++value;
}

program.option('-d, --depth <depth>', 'depth', parseInteger, Infinity);
program.parse(process.argv);

var args = Array.prototype.slice.call(program.args, 0);
if (!args.length) {
  console.log('Missing command. Example usage: each-package [command]');
  return process.exit(-1);
}

var eachPackage = require('..');

eachPackage(args[0], args.slice(1), program, function (err) {
  if (err) {
    console.log(err.message);
    return process.exit(err.exitCode || -1);
  }
  process.exit(0);
});
